<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- TextView com o tÃ­tulo -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registros de Perigos"
        android:textColor="@color/darkYellow"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />


    <ImageView
        android:id="@+id/mapaImg"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/mapaImg"
        app:layout_constraintStart_toStartOf="@id/mapaImg"
        app:layout_constraintEnd_toEndOf="@id/mapaImg"
        android:text="Registrar um perigo"
        android:background="@drawable/button_background"
        android:id="@+id/CameraBtn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
